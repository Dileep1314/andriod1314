<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/keyIndustryItemImage"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:contentDescription="@string/learn_key_industry_players"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/atco_logo" />

        <TextView
                android:id="@+id/keyIndustryItemTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/uniform_condensed_bold"
                android:text="@string/nav_learn"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/primaryBlack"
                app:layout_constraintEnd_toEndOf="@+id/keyIndustryItemContent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/keyIndustryItemContent"
                app:layout_constraintTop_toBottomOf="@id/keyIndustryItemImage" />

        <TextView
                android:id="@+id/keyIndustryItemContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:text="@string/learn_tab_title"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/keyIndustryItemSubtitle" />

        <TextView
                android:id="@+id/keyIndustryItemSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/uniform_condensed_bold"
                android:text="@string/learn_tab_title"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/keyIndustryItemTitle"
                app:layout_constraintStart_toStartOf="@+id/keyIndustryItemTitle"
                app:layout_constraintTop_toBottomOf="@+id/keyIndustryItemTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>